/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@myrmidon/cadmus-part-itinera-cod-loci": [
        "./dist/myrmidon/cadmus-part-itinera-cod-loci"
      ],
      "@myrmidon/cadmus-part-itinera-cod-poem-ranges": [
        "./dist/myrmidon/cadmus-part-itinera-cod-poem-ranges"
      ],
      "@myrmidon/cadmus-part-itinera-letter-info": [
        "./dist/myrmidon/cadmus-part-itinera-letter-info"
      ],
      "@myrmidon/cadmus-part-itinera-literary-work-info": [
        "./dist/myrmidon/cadmus-part-itinera-literary-work-info"
      ],
      "@myrmidon/cadmus-part-itinera-person-info": [
        "./dist/myrmidon/cadmus-part-itinera-person-info"
      ],
      "@myrmidon/cadmus-part-itinera-person-works": [
        "./dist/myrmidon/cadmus-part-itinera-person-works"
      ],
      "@myrmidon/cadmus-part-itinera-pg": [
